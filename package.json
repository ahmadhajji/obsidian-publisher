{
    "name": "obsidian-publisher",
    "version": "2.0.0",
    "description": "Live server for Obsidian notes with Google Drive sync",
    "main": "server.js",
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
        "start": "node server.js",
        "dev": "node server.js",
        "build": "node scripts/copy-frontend.js",
        "test": "node --test --test-concurrency=1 tests/**/*.test.js",
        "verify": "npm run test && npm run build",
        "postinstall": "npm run build",
        "setup": "node setup-auth.js"
    },
    "keywords": [
        "obsidian",
        "markdown",
        "google-drive"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "bcrypt": "^6.0.0",
        "better-sqlite3": "^12.6.2",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "google-auth-library": "^10.5.0",
        "googleapis": "^129.0.0",
        "gray-matter": "^4.0.3",
        "marked": "^11.1.1",
        "nodemailer": "^7.0.12",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "open": "^10.0.0",
        "server-destroy": "^1.0.1"
    }
}
